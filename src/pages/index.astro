---
import Layout from '../layouts/Layout.astro';
---

<Layout title="STAN Informatic Club 2024">
	<main class="grid gap-16 container mx-auto">
		<section class="h-96 bg-[url('/blob.svg')] bg-no-repeat bg-[length:800px] bg-[top_-100px_right_-100px] w-full">
			<div class="grid content-start justify-items-start gap-8 px-4 py-6 drop-shadow">
				<h1 class="font-bold text-gray-50"><span class="text-5xl md:text-7xl">STAN</span><br><span class="text-3xl md:text-5xl">INFORMATIC CLUB</span></h1>
				<p class="font-thin text-lg text-gray-50">UKM at PKN STAN</p>
				<button class="font-bold text-lg bg-white rounded-2xl px-6 py-2 text-sky-950">JOIN US</button>
			</div>
		</section>
		<section class="self">
			<div class="grid bg-gray-50 rounded-3xl w-[36rem] p-6 mx-auto h-96 justify-center">
				<h2 class="text-3xl font-bold">Apa itu STAN Informatic Club</h2>
			</div>
		</section>
		<section class="grid justify-items-center gap-16">
			<h2 class="text-3xl font-bold text-white">OUR DIVISION</h2>
			<div class="flex gap-4 overflow-auto">
				<div class="w-48 h-64 bg-gray-200 rounded-3xl"></div>
				<div class="w-48 h-64 bg-gray-200 rounded-3xl"></div>
				<div class="w-48 h-64 bg-gray-200 rounded-3xl"></div>
				<div class="w-48 h-64 bg-gray-200 rounded-3xl"></div>
				<div class="w-48 h-64 bg-gray-200 rounded-3xl"></div>
			</div>
		</section>
	</main>
</Layout>